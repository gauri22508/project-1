


<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-lg-8 col-md-10 col-12 offset-lg-3 offset-md-2 offset-0 responsive-main">
    <h3 class="responsive-title">
      <%= listing.title %> :
    </h3>
  </div>
  <div class="card col-lg-6 col-md-8 col-12 offset-lg-3 offset-md-2 offset-0 show-card listing-card responsive-card">
    <img src="<%= listing.image.url %>" class="card-img-top show-img responsive-img" alt="listing_image">
    <div class="card-body">
      <p class="card-text responsive-text">
       <b> Owned by:</b>
        <i>
         <b> <%= listing.owner.username %></b>
        </i>
      </p>
      <p class="card-text responsive-text">
        <%= listing.description %>
      </p>
      <p class="card-text responsive-text">
        &#8377; <%= listing.price.toLocaleString("en-IN") %>
      </p>
      <p class="card-text responsive-text">
        <%= listing.location %>
      </p>
      <p class="card-text responsive-text">
        <%= listing.country %>
      </p>
      <% if (currUser && listing.owner._id.equals(currUser._id)) { %>
        <div class="btns responsive-btns">
          <a href="/listings/<%= listing._id %>/edit" 
            class="btn btn-dark responsive-btn edit-btn">Edit</a>
          <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="d-inline">
            <button class="btn btn-dark responsive-btn">Delete</button>
          </form>
        </div>
      <% } %>
    </div>
  </div>
  <br>
  <div class="col-lg-8 col-md-10 col-12 offset-lg-3 offset-md-2 offset-0 mb-3 responsive-main">
    <% if (currUser) { %>
      <h4 class="responsive-title">Leave a Review :</h4>
      <form action="/listings/<%= listing.id %>/reviews" method="post" class="mb-3 needs-validation" novalidate>
        <div class="mb-3 mt-3">
          <label class="form-label">Rating:</label>
          <fieldset class="starability-slot responsive-stars">
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1"
             checked aria-label="No rating." />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>
        <div class="mb-3 mt-3">
          <label for="comment" class="form-label">Comment:</label>
          <textarea id="comment" name="review[comment]" class="form-control w-100 responsive-textarea" rows="4" required></textarea>
          <div class="invalid-feedback responsive-feedback">Please add some comments for review</div>
        </div>
        <button class="btn btn-outline-dark responsive-btn">Submit</button>
      </form>
    <% } %>
    <hr />
    <% if(listing.reviews.length > 0){%>
    <div class="row justify-content-start">
      <p class="responsive-text col-12"><b>All Reviews:</b></p>
      <% for (review of listing.reviews) { %>
        <div class="card col-lg-5 col-md-6 col-12 mb-3 responsive-review-card">
          <div class="card-body">
            <h5 class="card-title responsive-card-title">@<%= review.author.username %></h5>
            <p class="starability-result card-text responsive-stars-result" data-rating="<%= review.rating %>"></p>
            <p class="card-text review-comment responsive-text">
              <%= review.comment %>
            </p>
            <% if (currUser && review.author._id.equals(currUser._id)) { %>
              <form class="mb-3" method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=Delete">
                <button class="btn btn-sm btn-dark mt-2 responsive-btn">Delete</button>
              </form>
            <% } %>
          </div>
        </div>
      <% } %>
    </div>
    <% } %>
  </div>
</div>

<!-- MAP SECTION -->
<div class="row mt-4">
  <div class="col-lg-8 col-md-10 col-12 offset-lg-3 offset-md-2 offset-0 responsive-main">
    <h4 class="responsive-title">Location on Map</h4>
    <div
      id="map"
      class="responsive-map"
      data-lat="<%= listing.latitude || 28.6139 %>"
      data-lng="<%= listing.longitude || 77.2090 %>"
      data-location="<%= listing.location %>, <%= listing.country %>"
    >
    </div>
  </div>
</div>

<script src="/js/map.js"></script>