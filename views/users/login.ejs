<% layout("/layouts/boilerplate") %>

        <div class="row mt-3">
            <div class="col-6 offset-3 responsive-main">
                <h3 class="responsive-title"> Login </h3>
                <form method="POST" action="/login" novalidate class="needs-validation">
                    <div class="mb-3 responsive-text">
                        <label for="username" class="form-label">Username</label>
                        <input name="username"  
                            type="text" 
                            id="username"
                            class="form-control responsive-textarea"
                            required 
                        />
                     </div>


                    <div class="mb-3 responsive-text">
                        <label for="password" class="form-label">Password</label>
                        <input name="password"  
                            type="password" 
                            id="password"
                            class="form-control responsive-textarea"
                            required 
                        />
                    </div> 
                    
                    <button class="btn btn-success responsive-btn"> Login</button>
                </form>
            </div>
        </div>